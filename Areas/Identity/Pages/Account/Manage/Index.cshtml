@page
@model IndexModel
@{
    ViewData["Title"] = "Profil";
    ViewData["ActivePage"] = ManageNavPages.Index;
}

<div class="account-container">
    <div class="account-form-wrapper">

        <h1 style="font-size: 2.8rem; font-weight: 800; color: #0d2a4f; margin-bottom: 20px;">@ViewData["Title"]</h1>

        <partial name="_StatusMessage" for="StatusMessage" />

        <form id="profile-form" method="post">
            <div asp-validation-summary="ModelOnly" class="text-danger" role="alert"></div>

            <div class="form-floating">
                <input asp-for="Username" class="form-control" placeholder="Kullanıcı Adı" disabled />
                <label asp-for="Username" class="form-label"></label>
            </div>

            <div class="form-floating mt-3">
                <input asp-for="Input.PhoneNumber" class="form-control" placeholder="Telefon Numarası" />
                <label asp-for="Input.PhoneNumber" class="form-label"></label>
                <span asp-validation-for="Input.PhoneNumber" class="text-danger"></span>
            </div>

            <button id="update-profile-button" type="submit" class="w-100 btn btn-lg btn-account mt-4">Kaydet</button>
        </form>

    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}