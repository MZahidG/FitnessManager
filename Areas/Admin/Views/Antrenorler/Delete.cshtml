@model webOdev.Models.Antrenor

@{
    ViewData["Title"] = "Antrenörü Sil";
}

<!-- '.ai-form-container' stilini yeniden kullanıyoruz -->
<div class="ai-form-container" style="text-align: center;">
    <h1 style="color: #dc3545;">@ViewData["Title"]</h1>
    <p class="subtitle" style="color: #dc3545; opacity: 1;">
        Bu antrenörü silmek istediğinizden emin misiniz?
    </p>
    <p>Bu işlem geri alınamaz.</p>

    <hr />

    <!-- Silinecek antrenörün bilgileri -->
    <div style="background-color: #ffffff; padding: 20px; border-radius: 10px; text-align: left;">
        <h3 style="font-weight: 700;">@Model.AdSoyad</h3>
        <p style="font-size: 1.1rem; color: #555;">
            <span style="font-weight: 600; color: #0D2A4F;">Uzmanlık:</span> @Model.UzmanlikAlani
        </p>
    </div>

    <form asp-action="Delete" class="mt-4">
        <!-- SİLME İÇİN GİZLİ ID ALANI (ÇOK ÖNEMLİ) -->
        <input type="hidden" asp-for="Id" />

        <div class="d-flex justify-content-between align-items-center">
            <!-- 'btn-danger' Bootstrap'in kırmızı buton stilidir -->
            <input type="submit" value="Evet, Kalıcı Olarak Sil" class="btn btn-danger btn-lg" />
            <a asp-action="Index">İptal</a>
        </div>
    </form>
</div>