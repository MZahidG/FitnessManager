@model webOdev.ViewModels.YapayZekaOneriViewModel
@{
    ViewData["Title"] = "Yapay Zeka Egzersiz Önerisi";
}

<style>
    /* Ana Kart Yapısı */
    .ai-dashboard {
        background: rgba(255, 255, 255, 0.9);
        backdrop-filter: blur(20px);
        border-radius: 30px;
        box-shadow: 0 20px 60px rgba(13, 42, 79, 0.15);
        overflow: hidden;
        border: 1px solid rgba(255, 255, 255, 0.5);
    }

    /* Sol Panel (Form) */
    .form-panel {
        padding: 40px;
        display: flex;
        flex-direction: column;
        justify-content: center;
    }

    /* Sağ Panel (Görsel ve Sonuç) */
    .visual-panel {
        background: linear-gradient(135deg, #0D2A4F 0%, #277dff 100%);
        color: white;
        position: relative;
        overflow: hidden;
        padding: 40px;
        display: flex;
        align-items: center;
        justify-content: center;
        min-height: 600px; /* Biraz uzattık */
    }

    /* Dekoratif Arka Plan Çemberleri */
    .circle-deco {
        position: absolute;
        background: rgba(255, 255, 255, 0.1);
        border-radius: 50%;
    }

    .c1 {
        width: 300px;
        height: 300px;
        top: -100px;
        right: -50px;
    }

    .c2 {
        width: 200px;
        height: 200px;
        bottom: -50px;
        left: -50px;
    }

    /* Input Stilleri */
    .modern-input {
        background: #f8f9fa;
        border: 2px solid #e9ecef;
        border-radius: 15px;
        padding: 15px 20px;
        font-size: 1rem;
        transition: all 0.3s ease;
        color: #0D2A4F;
        font-weight: 500;
    }

        .modern-input:focus {
            border-color: #277dff;
            background: white;
            box-shadow: 0 0 0 4px rgba(39, 125, 255, 0.1);
            outline: none;
        }

    /* Dosya Yükleme Alanı */
    .file-upload-box {
        border: 2px dashed #cbd5e1;
        border-radius: 15px;
        padding: 20px;
        text-align: center;
        cursor: pointer;
        transition: all 0.3s ease;
        background: #f8f9fa;
        color: #64748b;
    }

        .file-upload-box:hover {
            border-color: #277dff;
            background: #eef6ff;
            color: #277dff;
        }

        .file-upload-box input {
            display: none;
        }

    /* Buton */
    .btn-ai {
        background: #0D2A4F;
        color: white;
        border: none;
        padding: 18px;
        border-radius: 15px;
        font-weight: 700;
        font-size: 1.1rem;
        letter-spacing: 0.5px;
        transition: all 0.3s ease;
        margin-top: 20px;
        box-shadow: 0 10px 20px rgba(13, 42, 79, 0.2);
    }

        .btn-ai:hover {
            background: #277dff;
            transform: translateY(-3px);
            box-shadow: 0 15px 30px rgba(39, 125, 255, 0.3);
            color: white;
        }

    /* AI Sonuç Metni */
    .ai-response {
        background: rgba(255, 255, 255, 0.1);
        backdrop-filter: blur(10px);
        border-radius: 20px;
        padding: 30px;
        border: 1px solid rgba(255, 255, 255, 0.2);
        color: white;
        font-size: 1.05rem;
        line-height: 1.7;
        max-height: 500px;
        overflow-y: auto;
        width: 100%;
        margin-top: 20px;
    }

        .ai-response h1, .ai-response h2, .ai-response h3 {
            color: #8ecae6;
            margin-top: 20px;
        }

        .ai-response ul {
            padding-left: 20px;
        }

        .ai-response strong {
            color: #ffb703;
        }

    /* Yüklenen Resim Önizleme */
    .user-photo-preview {
        width: 150px;
        height: 150px;
        border-radius: 50%;
        object-fit: cover;
        border: 4px solid rgba(255,255,255,0.5);
        box-shadow: 0 10px 30px rgba(0,0,0,0.3);
        margin-bottom: 20px;
        animation: float 6s ease-in-out infinite;
    }

    @@keyframes float {
      0%{transform: translateY(0px);}
      50%{transform: translateY(-10px);}
      100% {transform: translateY(0px);}
    }
</style>

<div class="container mt-5 mb-5">
    <div class="row justify-content-center">
        <div class="col-lg-11">

            <div class="ai-dashboard row g-0">

                <div class="col-md-5 form-panel">
                    <div class="mb-3">
                        <span class="badge bg-primary bg-opacity-10 text-primary mb-2 px-3 py-2 rounded-pill">Yapay Zeka Destekli</span>
                        <h1 style="font-weight: 800; color: #0D2A4F; font-size: 2.2rem; margin-bottom: 5px;">
                            Kişisel Koçun <span style="color: #277dff;">Hazır</span>
                        </h1>
                        <p class="text-muted small">Vücut ölçülerini gir, fotoğrafını yükle ve sana özel programı al.</p>
                    </div>

                    <form asp-action="OneriAl" method="post" enctype="multipart/form-data">
                        <div asp-validation-summary="All" class="text-danger mb-3 small"></div>

                        <div class="row g-2">
                            <div class="col-6">
                                <div class="form-group">
                                    <label asp-for="Boy" class="form-label text-muted fw-bold small">BOY (CM)</label>
                                    <input asp-for="Boy" class="form-control modern-input" placeholder="175" />
                                </div>
                            </div>
                            <div class="col-6">
                                <div class="form-group">
                                    <label asp-for="Kilo" class="form-label text-muted fw-bold small">KİLO (KG)</label>
                                    <input asp-for="Kilo" class="form-control modern-input" placeholder="70" />
                                </div>
                            </div>
                        </div>

                        <div class="form-group mt-3">
                            <label asp-for="Hedef" class="form-label text-muted fw-bold small">ANA HEDEFİN</label>
                            <input asp-for="Hedef" class="form-control modern-input" placeholder="Örn: Kilo vermek..." />
                        </div>

                        <div class="form-group mt-3">
                            <label class="form-label text-muted fw-bold small">FOTOĞRAFIN (İSTEĞE BAĞLI)</label>
                            <label class="file-upload-box w-100">
                                <input asp-for="Fotograf" type="file" accept="image/*" onchange="previewImage(this)">
                                <i class="bi bi-cloud-upload" style="font-size: 1.5rem;"></i>
                                <div id="uploadText" class="mt-2 small">Fotoğraf yüklemek için tıkla</div>
                            </label>
                        </div>

                        <button type="submit" class="btn btn-ai w-100">
                            <i class="bi bi-stars me-2"></i> Analiz Et & Programla
                        </button>
                    </form>
                </div>

                <div class="col-md-7 visual-panel">
                    <div class="circle-deco c1"></div>
                    <div class="circle-deco c2"></div>

                    <div style="position: relative; z-index: 2; width: 100%; display:flex; flex-direction:column; align-items:center;">

                        @if (ViewBag.YuklenenResim != null)
                        {
                            <img src="@ViewBag.YuklenenResim" class="user-photo-preview" alt="User Photo" />
                            <div class="text-white small mb-3"><i class="bi bi-person-check-fill"></i> Fotoğraf Analiz Edildi</div>
                        }
                        else
                        {
                            <div class="text-center mb-4">
                                <i class="bi bi-robot" style="font-size: 4rem; color: #8ecae6; filter: drop-shadow(0 0 15px rgba(142, 202, 230, 0.5));"></i>
                            </div>
                        }

                        @if (ViewBag.Oneri != null)
                        {
                            <div class="ai-response custom-scrollbar">
                                <h4 class="text-center fw-bold mb-3"><i class="bi bi-clipboard-data"></i> Senin İçin Planım</h4>
                                @Html.Raw(ViewBag.Oneri.Replace("\n", "<br>"))
                            </div>
                        }
                        else
                        {
                            <div class="text-center mt-2">
                                <h3 class="fw-bold">Verilerini Bekliyorum...</h3>
                                <p style="opacity: 0.8; font-size: 0.9rem; max-width: 300px; margin: 0 auto;">
                                    Sana en uygun rotayı çizmek için sol taraftaki formu doldur. Fotoğrafını yüklersen daha motive edici olur!
                                </p>
                            </div>
                        }
                    </div>
                </div>

            </div>

        </div>
    </div>
</div>

<style>
    .custom-scrollbar::-webkit-scrollbar {
        width: 8px;
    }

    .custom-scrollbar::-webkit-scrollbar-track {
        background: rgba(255,255,255,0.1);
        border-radius: 4px;
    }

    .custom-scrollbar::-webkit-scrollbar-thumb {
        background: rgba(255,255,255,0.3);
        border-radius: 4px;
    }

        .custom-scrollbar::-webkit-scrollbar-thumb:hover {
            background: rgba(255,255,255,0.5);
        }
</style>

<script>
    function previewImage(input) {
        if (input.files && input.files[0]) {
            document.getElementById('uploadText').innerText = "Seçilen: " + input.files[0].name;
            document.querySelector('.file-upload-box').style.borderColor = "#277dff";
            document.querySelector('.file-upload-box').style.color = "#277dff";
        }
    }
</script>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}