@model webOdev.Models.Antrenor
@using Microsoft.EntityFrameworkCore
@inject webOdev.Data.ApplicationDbContext _context

@{
    ViewData["Title"] = "Antrenör Paneli";
    var seanslar = ViewBag.Seanslar as List<webOdev.Models.DersSeans>;
    var bekleyenRandevular = ViewBag.BekleyenRandevular as List<webOdev.Models.Randevu>;
}

<style>
    .btn-delete-modern {
        background: linear-gradient(135deg, #ff416c, #ff4b2b); /* Modern Kırmızı Gradyan */
        border: none;
        border-radius: 10px; /* Daha yumuşak köşeler */
        width: 34px;
        height: 34px;
        padding: 0;
        display: flex;
        align-items: center;
        justify-content: center;
        color: white;
        box-shadow: 0 4px 8px rgba(255, 75, 43, 0.3); /* Hafif kırmızı gölge */
        transition: all 0.3s ease;
    }

        .btn-delete-modern:hover {
            transform: translateY(-3px); /* Üzerine gelince yukarı kalksın */
            box-shadow: 0 6px 15px rgba(255, 75, 43, 0.5); /* Gölge belirginleşsin */
            color: white;
        }

        .btn-delete-modern i {
            font-size: 1.1rem;
        }
</style>

<div class="d-flex justify-content-between align-items-center mb-4 mt-2">
    <div>
        <h1 style="font-weight: 800; color: #0D2A4F; letter-spacing: -1px;">Yönetim Paneli</h1>
        <p style="color: #0D2A4F; opacity: 0.8;">Ders programını ve gelen talepleri buradan yönetebilirsiniz.</p>
    </div>
    <a asp-action="Index" class="btn btn-outline-dark" style="border-radius: 12px; font-weight: 600;">← Listeye Dön</a>
</div>

@if (TempData["Basari"] != null)
{
    <div class="alert alert-success alert-dismissible fade show shadow-sm" role="alert" style="border-radius: 12px; border:none; background-color: #d1e7dd; color: #0f5132;">
        <i class="bi bi-check-circle-fill me-2"></i> @TempData["Basari"]
        <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
    </div>
}

<div class="row">
    <div class="col-lg-4 mb-4">
        <div class="ai-form-container" style="background-color: white; border-radius: 20px; padding: 30px; box-shadow: 0 10px 30px rgba(0,0,0,0.05);">

            <div class="text-center mb-4">
                <div style="width: 80px; height: 80px; background-color: #e8f5ff; color: #0D2A4F; font-size: 30px; display: flex; align-items: center; justify-content: center; border-radius: 50%; margin: 0 auto 15px auto; font-weight: bold;">
                    @Model.AdSoyad.Substring(0, 1)
                </div>
                <h3 style="color:#0D2A4F; font-weight: 700;">@Model.AdSoyad</h3>
                <span class="badge bg-primary" style="font-size: 0.9rem; border-radius: 8px;">@Model.UzmanlikAlani</span>
            </div>

            <hr style="border-color: #eee;" />

            <h4 class="mt-4 mb-3" style="color:#0D2A4F; font-weight: 700;">📅 Yeni Ders Ekle</h4>

            <form asp-action="SeansEkle" method="post">
                <input type="hidden" name="antrenorId" value="@Model.Id" />

                <div class="form-group mb-3">
                    <label style="font-weight: 600; color: #0D2A4F; margin-bottom: 5px;">Tarih Seçin</label>
                    <input type="date" name="tarih" class="form-control" style="border-radius: 10px; padding: 10px;" required />
                </div>

                <div class="form-group mb-3">
                    <label style="font-weight: 600; color: #0D2A4F; margin-bottom: 5px;">Saat Aralığı</label>
                    <input type="text" name="saatAraligi" class="form-control" placeholder="Örn: 16:00 - 17:00" style="border-radius: 10px; padding: 10px;" required />
                </div>

                <div class="form-group mb-3">
                    <label style="font-weight: 600; color: #0D2A4F; margin-bottom: 5px;">Hizmet/Ders Adı</label>
                    <input type="text" name="dersAdi" class="form-control" placeholder="Örn: Koşu, Pilates" style="border-radius: 10px; padding: 10px;" required />
                </div>

                <div class="row">
                    <div class="col-6">
                        <div class="form-group mb-3">
                            <label style="font-weight: 600; color: #0D2A4F; margin-bottom: 5px;">Kapasite</label>
                            <input type="number" name="kapasite" class="form-control" value="1" min="1" style="border-radius: 10px; padding: 10px;" required />
                        </div>
                    </div>
                    <div class="col-6">
                        <div class="form-group mb-3">
                            <label style="font-weight: 600; color: #0D2A4F; margin-bottom: 5px;">Ücret (TL)</label>
                            <input type="number" name="ucret" class="form-control" placeholder="600" style="border-radius: 10px; padding: 10px;" required />
                        </div>
                    </div>
                </div>

                <button type="submit" class="btn btn-primary w-100 py-2 mt-2" style="background-color: #0D2A4F; border: none; border-radius: 12px; font-weight: 600; box-shadow: 0 4px 10px rgba(13, 42, 79, 0.2); transition: all 0.3s;">
                    + Dersi Takvime Ekle
                </button>
            </form>
        </div>
    </div>

    <div class="col-lg-8">

        @if (bekleyenRandevular != null && bekleyenRandevular.Any())
        {
            <div class="mb-5">
                <h4 style="color:#0D2A4F; font-weight: 700; margin-bottom: 15px;">
                    🔔 Bekleyen İstekler <span class="badge bg-warning text-dark" style="vertical-align: middle;">@bekleyenRandevular.Count</span>
                </h4>

                <div class="row">
                    @foreach (var talep in bekleyenRandevular)
                    {
                        <div class="col-12 mb-3">
                            <div class="card border-0 shadow-sm" style="border-left: 6px solid #ffc107 !important; border-radius: 12px; overflow: hidden;">
                                <div class="card-body d-flex justify-content-between align-items-center" style="background-color: white;">

                                    <div style="color: #0D2A4F;">
                                        <h5 style="font-weight: 700; margin-bottom: 5px;">@talep.Uye.UserName</h5>
                                        <p class="mb-0" style="font-size: 0.95rem; opacity: 0.9;">
                                            <span style="font-weight: 600;">Ders:</span> @talep.DersSeans.DersAdi &nbsp;|&nbsp;
                                            <span style="font-weight: 600;">Tarih:</span> @talep.DersSeans.Tarih.ToShortDateString() &nbsp;|&nbsp;
                                            <span style="font-weight: 600;">Saat:</span> @talep.DersSeans.SaatAraligi
                                        </p>
                                    </div>

                                    <div style="min-width: 150px; text-align: right;">
                                        <form asp-area="Admin" asp-controller="Antrenorler" asp-action="RandevuOnayla" method="post" style="display:inline;">
                                            <input type="hidden" name="randevuId" value="@talep.Id" />
                                            <input type="hidden" name="antrenorId" value="@Model.Id" />
                                            <button type="submit" class="btn btn-success btn-sm shadow-sm" style="border-radius: 8px; font-weight: 600; padding: 5px 15px; border:none;">Onayla</button>
                                        </form>

                                        <form asp-area="Admin" asp-controller="Antrenorler" asp-action="RandevuReddet" method="post" style="display:inline; margin-left: 5px;">
                                            <input type="hidden" name="randevuId" value="@talep.Id" />
                                            <input type="hidden" name="antrenorId" value="@Model.Id" />
                                            <button type="submit" class="btn btn-danger btn-sm shadow-sm" style="border-radius: 8px; font-weight: 600; padding: 5px 15px; border:none;">Reddet</button>
                                        </form>
                                    </div>

                                </div>
                            </div>
                        </div>
                    }
                </div>
            </div>
        }

        <h4 style="color:#0D2A4F; font-weight: 700; margin-bottom: 20px;">📌 Takvimdeki Dersleriniz</h4>

        <div class="row">
            @if (seanslar != null && seanslar.Any())
            {
                var tumRandevular = _context.Randevular.Where(r => r.OnayDurumu == true).ToList();

                foreach (var seans in seanslar)
                {
                    int mevcutKatilimci = tumRandevular.Count(r => r.DersSeansId == seans.Id);
                    int kalan = seans.Kapasite - mevcutKatilimci;
                    bool doldu = seans.DoluMu || kalan <= 0;

                    <div class="col-md-6 mb-4">
                        <div class="new-design-card hizmet-card h-100" style="background-color: white; border: 1px solid #eee; position: relative; box-shadow: 0 5px 15px rgba(0,0,0,0.05);">

                            <div style="position: absolute; top: 15px; right: 15px; display: flex; align-items: center; gap: 8px;">

                                <span class="badge @(doldu ? "bg-danger" : "bg-success")" style="font-size: 0.8rem; border-radius: 6px; padding: 6px 10px;">
                                    @(doldu ? "DOLU" : "MÜSAİT")
                                </span>

                                <form asp-action="SeansSil" method="post" onsubmit="return confirm('UYARI: Bu dersi ve derse ait tüm randevuları silmek istediğinize emin misiniz?');" style="margin:0;">
                                    <input type="hidden" name="seansId" value="@seans.Id" />
                                    <button type="submit" class="btn-delete-modern" title="Dersi ve Kayıtları Sil">
                                        <i class="bi bi-trash-fill"></i>
                                    </button>
                                </form>

                            </div>

                            <h5 style="color: #0D2A4F; font-weight: 800; margin-bottom: 10px; padding-right: 100px;">@seans.DersAdi</h5>

                            <div style="color: #555; font-size: 0.95rem;">
                                <p class="mb-1"><i class="bi bi-calendar-event me-2" style="color:#277dff;"></i> @seans.Tarih.ToShortDateString()</p>
                                <p class="mb-1"><i class="bi bi-clock me-2" style="color:#277dff;"></i> @seans.SaatAraligi</p>
                                <p class="mb-3"><i class="bi bi-cash-stack me-2" style="color:#277dff;"></i> <strong>@seans.Ucret ₺</strong></p>
                            </div>

                            <div class="w-100 mt-auto">
                                <div class="d-flex justify-content-between text-muted" style="font-size: 0.85rem; margin-bottom: 5px; font-weight: 600;">
                                    <span>Doluluk Oranı</span>
                                    <span>@mevcutKatilimci / @seans.Kapasite</span>
                                </div>
                                <div class="progress" style="height: 10px; border-radius: 5px; background-color: #e9ecef;">
                                    @{
                                        int yuzde = (int)((double)mevcutKatilimci / seans.Kapasite * 100);
                                        string barColor = doldu ? "bg-danger" : "bg-primary";
                                    }
                                    <div class="progress-bar @barColor" role="progressbar" style="width: @yuzde%; border-radius: 5px; transition: width 0.5s ease;" aria-valuenow="@yuzde" aria-valuemin="0" aria-valuemax="100"></div>
                                </div>
                            </div>

                        </div>
                    </div>
                }
            }
            else
            {
                <div class="col-12">
                    <div class="text-center py-5" style="border: 2px dashed #dee2e6; border-radius: 20px; color: #adb5bd; background-color: #f8f9fa;">
                        <i class="bi bi-calendar-x" style="font-size: 3rem; margin-bottom: 10px;"></i>
                        <p class="mb-0" style="font-weight: 600;">Henüz açılmış bir dersiniz yok.</p>
                        <small>Sol taraftaki formdan yeni bir ders ekleyebilirsiniz.</small>
                    </div>
                </div>
            }
        </div>
    </div>
</div>