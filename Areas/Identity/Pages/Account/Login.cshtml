@page
@model LoginModel

@{
    ViewData["Title"] = "Giriş Yap";
}

<div class="account-container">
    <div class="account-form-wrapper">

        <h1>@ViewData["Title"]</h1>
        <p class="subtitle">Tekrar hoş geldiniz!</p>

        <form id="account" method="post">

            <div asp-validation-summary="ModelOnly" class="text-danger" role="alert"></div>

            <div class="form-floating">
                <input asp-for="Input.Email" class="form-control" autocomplete="username" aria-required="true" placeholder="E-posta" />
                <label asp-for="Input.Email" class="form-label">E-posta</label>
                <span asp-validation-for="Input.Email" class="text-danger"></span>
            </div>

            <div class="form-floating">
                <input asp-for="Input.Password" class="form-control" autocomplete="current-password" aria-required="true" placeholder="Şifre" />
                <label asp-for="Input.Password" class="form-label">Şifre</label>
                <span asp-validation-for="Input.Password" class="text-danger"></span>
            </div>

            <div class="checkbox mb-3 mt-3 text-start">
                <label asp-for="Input.RememberMe" class="form-label">
                    <input class="form-check-input" asp-for="Input.RememberMe" />
                    Beni Hatırla
                </label>
            </div>

            <div>
                <button id="login-submit" type="submit" class="w-100 btn btn-lg btn-account">Giriş Yap</button>
            </div>

            <div class="mt-4">
                <p>
                    <a id="forgot-password" asp-page="./ForgotPassword">Şifrenizi mi unuttunuz?</a>
                </p>
                <p>
                    <a asp-page="./Register" asp-route-returnUrl="@Model.ReturnUrl">Yeni hesap oluştur</a>
                </p>
            </div>
        </form>

    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}